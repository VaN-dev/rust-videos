{% extends '::layout.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                {% include '@App/User/nav.html.twig' %}
            </div>
            <div class="col-sm-9">
                <h1>Profile</h1>

                <div class="row">
                    {{ form_start(form) }}
                    <div class="col-xs-12">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="col-xs-12 col-md-6">
                        {{ form_row(form.password.first) }}
                    </div>
                    <div class="col-xs-12 col-md-6">
                        {{ form_row(form.password.second) }}
                    </div>
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-success">Update</button>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
