<div class="thumbnail">
    <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="{{ video.embed }}" allowfullscreen></iframe>
    </div>
    <div class="caption">
        <h3>
            <a href="{{ path('app.bookmark.create', {'video': video.id}) }}" class="favorite-trigger pull-right"><i class="glyphicon glyphicon-star disabled"></i></a>
            <a href="{{ path('app.video.read', {'id': video.id}) }}">{{ video.title }}</a>
        </h3>
    </div>
    <div class="panel-footer">
        {% if video.author is not null %}
            <span class="pull-left"><i class="glyphicon glyphicon-user"></i> &nbsp;<a href="{{ video.channel }}">{{ video.author }}</a></span>
        {% endif %}
        {% if video.category is not null %}
            <span class="pull-right"><i class="glyphicon glyphicon-folder-open"></i> &nbsp;<a href="{{ path('app.category.read', {'id': video.category.id}) }}">{{ video.category.name }}</a></span>
        {% endif %}
        <div class="clearfix"></div>
    </div>
</div>