<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a href="{{ path('app') }}" class="navbar-brand"><i class="glyphicon glyphicon-film"></i> Rust Videos</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app.category') }}">Categories <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <ul class="navbar-nav mr-md-0">
                <li class="nav-item dropdown">
                    {#<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ app.user.username }} <span class="caret"></span></a>#}
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ app.user.username }} <span class="caret"></span></a>
                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <a class="dropdown-item" href="{{ path('app.user.profile') }}">Profile</a>
                        <a href="{{ path('app.user.bookmarks') }}" class="dropdown-item">Bookmarks</a>
                        <div class="dropdown-divider"></div>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin') }}" class="dropdown-item">Backend</a>
                            <div class="dropdown-divider"></div>
                        {% endif %}
                        <a href="{{ path('app.security.logout') }}" class="dropdown-item">Sign out</a>
                    </div>
                </li>
            </ul>
            {% else %}
                <form class="form-inline my-2 my-lg-0" method="post">
                    <input class="form-control mr-sm-2" type="text" name="username" placeholder="Email" aria-label="Email">
                    <input class="form-control mr-sm-2" type="password" name="password" placeholder="Password" aria-label="Password">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-success my-2 my-sm-0" type="submit">Sign in</button>
                </form>
            {% endif %}

            {#<form class="navbar-form navbar-right" method="post">#}
