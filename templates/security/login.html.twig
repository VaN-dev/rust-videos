{% extends 'layout.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
    <div class="container">
        <h1>Login</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post" class="form-horizontal">
            <div class="col-xs-12">
                <div class="form-group">
                    <input type="email" id="username" name="username" value="{{ last_username }}" class="form-control" placeholder="Votre e-mail" />
                    <i class="zmdi zmdi-account-circle form-control-feedback l-h-34"></i>
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group">
                    <input type="password" id="password" name="password" class="form-control" placeholder="Votre mot de passe" />
                    <i class="zmdi zmdi-key form-control-feedback l-h-34"></i>
                </div>
            </div>
            {#
                Si vous voulez contrôler l'URL vers laquelle l'utilisateur est redirigé en cas de succès
                (plus de détails ci-dessous)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <div class="col-xs-6">
                <div class="form-group">
                    <div class="checkbox checkbox-primary">
                        <input id="checkbox-signup" type="checkbox" name="_remember_me">
                        <label for="checkbox-signup"> Remember me </label>
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <button type="submit" class="btn btn-default pull-right">login</button>
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group">
                    <small>
                        <a href="#" class="text-muted pull-left">
                            <i class="fa fa-lock m-r-5"></i>
                            Forgot your password?
                        </a>
                        <a href="{{ path('app.register') }}" class="text-muted pull-right">Create an account</a>
                    </small>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        </form>
    </div>
{% endblock %}
