<div class="card">
    <div class="card-header">
        {{ video.title | truncate(30, true, '...') }}
    </div>
    <div class="card-body">
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="{{ video.embed }}" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>
    <div class="card-footer">
        <a href="{{ path('app.video.read', {'id': video.id}) }}" class="pull-left">View details &raquo;</a>
        {% if video.category is not null %}
            <span class="float-right"><i class="glyphicon glyphicon-folder-open"></i> &nbsp;<a href="{{ path('app.category.read', {category: video.category.id}) }}">{{ video.category.name }}</a></span>
        {% endif %}
        <div class="clearfix"></div>
    </div>
</div>

